<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_gravity="top"
    android:layout_marginLeft="8dp"
    android:gravity="center">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="56dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/feedback"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/yandex_ads_internal_app_install_feedback_white" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/close"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/close_appearance"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/yandex_ads_internal_app_install_close_white" />

        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/timer_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:focusable="true"
        android:clickable="true"
        tools:visibility="visible">

        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/yandex_ads_internal_app_install_circle_for_dark_background"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/timer_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/yandex_ads_internal_text_color_white"
                android:textSize="14dp"
                tools:text="12" />

        </FrameLayout>

    </FrameLayout>

</LinearLayout>
