<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/warning_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="12dp"
    tools:context="com.yandex.mobile.ads.common.AdActivity"
    tools:ignore="MergeRootFrame">

    <com.yandex.mobile.ads.fullscreen.template.view.ExtendedTextView
        android:id="@+id/warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textAllCaps="true"
        android:textColor="#40FFFFFF"
        android:visibility="gone"
        tools:background="#333333"
        tools:text="@string/yandex_ads_internal_tools_warning_text"
        tools:visibility="visible" />

</FrameLayout>
