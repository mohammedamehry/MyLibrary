<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    tools:context="com.yandex.mobile.ads.common.AdActivity"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/yandex_ads_internal_rewarded_close_verification_background"
        android:clickable="false"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/verification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/yandex_ads_internal_rewarded_close_verification_text_color"
            android:textSize="24sp"
            tools:text="@string/yandex_ads_internal_rewarded_close_verification_title" />

        <TextView
            android:id="@+id/verification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="1sp"
            android:textColor="@color/yandex_ads_internal_rewarded_close_verification_text_color"
            android:textSize="16sp"
            tools:text="@string/yandex_ads_internal_rewarded_close_verification_text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/verification_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/yandex_ads_internal_rewarded_close_verification_button_close_background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textColor="@color/yandex_ads_internal_rewarded_close_verification_text_color"
                android:textSize="16sp"
                tools:text="@string/yandex_ads_internal_rewarded_close_verification_button_close" />

            <TextView
                android:id="@+id/verification_dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yandex_ads_internal_rewarded_close_verification_button_dismiss_background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textColor="@color/yandex_ads_internal_rewarded_close_verification_text_color"
                android:textSize="16sp"
                tools:text="@string/yandex_ads_internal_rewarded_close_verification_button_dismiss" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
